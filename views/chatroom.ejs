<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat App</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/avatar.css">
</head>
<body>

  
  <div class="main">
    <div class="row">
      <div class="container">
        <p hidden id="name"><%=name%></p>
        <% if(!isOwner) { %>
          <h1 id="<%=name%>" style="text-align: center;">Hi <%=name%>, Welcome to <%= owner %>'s Room </h1>
        <% } else { %>
          <h1 id="<%=name%>" style="text-align: center;">Welcome to <%= owner %>'s Room </h1>
        <% } %>
        <img class="avatar" src="/avatars/<%=ownerAvatar%>.png" alt="">
      </div>
  
      <div id="messageBox" class="message-box col-4">
        
        <div class="owner-name"><%=owner%></div>

        <% messages.map(message=>{ %>
          <div class="message-wrapper ">
            <p class="message-text card"><%-message.text%></p>
            <div class="time"><%=message.time%></div>
          </div>
        <% }) %>

      </div>
      <% if( isOwner ){ %> 
        <div class="buttons col-2" >
          <button class="btn btn-danger" id="deleteRoom" onclick="exitRoom()">Leave Room</button>
        </div>
        <div class="text-wrapper col-4">
          <input id="textarea">
          <button class="btn btn-success" id="send" onclick="sendMessage()">Send</button>

        </div>
      <% } %>
    </div>
    
  </div>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>  <script src="/js/script.js"></script>
</body>
</html>